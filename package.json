{
  "name": "api-dashboard",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.23",
    "@types/node": "^12.20.15",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "concurrently": "^6.2.0",
    "cors": "^2.8.5",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "http-proxy-middleware": "^0.19.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.3",
    "passport": "^0.4.1",
    "passport-google-oauth20": "^2.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "start:server": "doppler run -- node ./server/dist/index.js",
    "dev": "doppler setup -p api-dashboard -c dev && doppler run -- concurrently \"npm run dev:react\" \"npm run dev:server\"",
    "dev:react": "react-scripts start",
    "dev:server": "nodemon --watch './server/**/*.ts' --exec 'ts-node' ./server/src/index.ts",
    "build": "npm run build:react && npm run build:server",
    "build:react": "react-scripts build",
    "build:server": "rm -rf ./server/dist/views && mkdir ./server/dist && mkdir ./server/dist/views && cp views/**.ejs ./server/dist/views && cd server && npx tsc --build ./tsconfig.json",
    "lint": "npm run lint:eslint-react && npm run lint:eslint-server && npm run lint:pretty",
    "lint:eslint-react": "eslint {src,public}/**/*.{js,ts,tsx} --fix",
    "lint:eslint-server": "cd server && eslint ./**/*.{ts,js} --fix",
    "lint:pretty": "prettier --write .",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.12",
    "@types/express-session": "^1.17.4",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/passport-google-oauth20": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.24.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  }
}
